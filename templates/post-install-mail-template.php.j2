function has_dns_record($fqdn) {
  set_error_handler(function() { /* ignore errors */ });
  $result = dns_get_record($fqdn);
  restore_error_handler();

  if ($result == false) {
    return false;
  }

  foreach ($result as $record) {
    if ($record["host"] == $fqdn && ($record["type"] == "A" || $record["type"] == "CNAME")) {
      return true;
    }
  }
  return false;
}

